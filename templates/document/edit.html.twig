{% extends 'base.html.twig' %}

{% block title %}‚úèÔ∏è Modifier le document{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">‚úèÔ∏è Modifier le document</h1>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'success' ? 'success' : 'danger' }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
            </div>
        {% endfor %}
    {% endfor %}

    {{ form_start(form, { attr: { enctype: "multipart/form-data" } }) }}
        <div class="mb-3">
            {{ form_label(form.uploadedFile, 'Remplacer le fichier (optionnel)') }}
            {{ form_widget(form.uploadedFile, {
                attr: {
                    class: 'form-control',
                    accept: '.pdf,.doc,.docx,.xls,.xlsx,.jpg,.jpeg,.png,.gif,.zip,.rar'
                }
            }) }}
            <div class="form-text">
                Laisser vide pour conserver le fichier actuel.
            </div>
            {{ form_errors(form.uploadedFile) }}
        </div>

        <button type="submit" class="btn btn-primary">
            üíæ Enregistrer les modifications
        </button>
    {{ form_end(form) }}

    <hr class="my-4">

    <a href="{{ path('app_document_index') }}" class="btn btn-outline-secondary me-2">
        ‚¨ÖÔ∏è Retour √† la liste
    </a>

    {{ include('document/_delete_form.html.twig') }}
</div>
{% endblock %}
