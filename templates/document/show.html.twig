{% extends 'base.html.twig' %}

{% block title %}📄 Document : {{ document.fileName }}{% endblock %}

{% block body %}
  <div class="container mt-5">
    <h1 class="mb-3">📄 {{ document.fileName }}</h1>
    <p class="text-muted">Ajouté le {{ document.createdAt|date('d/m/Y H:i') }}</p>

    <div class="mt-4">
      <a href="{{ asset('uploads/documents/' ~ document.fileName) }}" class="btn btn-primary" download>
        ⬇️ Télécharger le document
      </a>
      <a href="{{ path('app_document_index') }}" class="btn btn-secondary ms-2">
        ⬅️ Retour à la liste
      </a>
    </div>
  </div>
    <table class="table">
        <tbody>
            <tr>
                <th>FileName</th>
                <td>{{ document.fileName }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_document_index') }}">back to list</a>

    <a href="{{ path('app_document_edit', {'fileName': document.fileName}) }}">edit</a>

    {{ include('document/_delete_form.html.twig') }}
{% endblock %}
