{% extends 'base.html.twig' %}

{% block title %}Mes documents{% endblock %}

{% block body %}
  <div class="container mt-4">
    <h1 class="mb-4 text-light">ðŸ“„ Mes documents</h1>

    <div class="mb-3">
      <a href="{{ path('app_document_new') }}" class="btn btn-success">âž• Nouveau document</a>
    </div>

    {% if documents is not empty %}
      <ul class="list-group">
        {% for document in documents %}
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
              ðŸ“„ {{ document.fileName }}<br>
              <small class="text-muted">AjoutÃ© le {{ document.createdAt|date('d/m/Y H:i') }}</small>
            </div>

            <div class="d-flex gap-2">
              <a href="{{ path('app_document_show', { fileName: document.fileName }) }}" class="btn btn-sm btn-primary">
                Voir
              </a>

              <a href="{{ path('app_document_edit', { id: document.id }) }}" class="btn btn-sm btn-warning">
                Modifier
              </a>

              <form method="post" action="{{ path('app_document_delete', { id: document.id }) }}" onsubmit="return confirm('Supprimer ce fichier ?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ document.id) }}">
                <button class="btn btn-sm btn-danger">Supprimer</button>
              </form>
            </div>
          </li>
        {% endfor %}
      </ul>
    {% else %}
      <div class="alert alert-info mt-4">Aucun document disponible.</div>
    {% endif %}
  </div>
{% endblock %}
