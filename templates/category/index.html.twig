{% extends 'base.html.twig' %}

{% block title %}Toutes les catégories{% endblock %}

{% block body %}
  <div class="container mt-4 text-light">
    <h2 class="mb-4">📚 Catégories disponibles</h2>

    {% if categories|length > 0 %}
      <div class="row">
        {% for category in categories %}
          <div class="col-md-6 mb-4">
            <div class="card h-100 shadow-sm">
              <div class="card-body bg-dark text-light">
                <h5 class="card-title">{{ category.name }}</h5>
                <p class="card-text">{{ category.description }}</p>
                <a href="{{ path('forum_category', { id: category.id }) }}" class="btn btn-outline-light w-100">
                  📁 Voir les boards
                </a>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <div class="alert alert-warning">Aucune catégorie enregistrée pour l’instant.</div>
    {% endif %}
  </div>
{% endblock %}
