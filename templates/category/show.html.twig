{% extends 'base.html.twig' %}

{% block title %}Boards - {{ category.name }}{% endblock %}

{% block body %}
  <div class="container mt-4">
    <h2 class="mb-4 text-light">üìÅ {{ category.name }}</h2>

    {% if category.boards|length > 0 %}
      <div class="list-group">
        {% for board in category.boards %}
          <a href="{{ path('forum_board', { id: board.id }) }}"
             class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
            <div>
              <strong>{{ board.name }}</strong>
              <p class="mb-0 text-muted">{{ board.description }}</p>
            </div>
            <span class="badge bg-primary rounded-pill">Voir</span>
          </a>
        {% endfor %}
      </div>
    {% else %}
      <div class="alert alert-warning mt-3">Aucun board dans cette cat√©gorie.</div>
    {% endif %}
  </div>
{% endblock %}
