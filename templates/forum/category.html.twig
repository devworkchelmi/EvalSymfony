{% extends 'base.html.twig' %}
{% block title %}Boards{% endblock %}
{% block body %}
  <h2 class="mb-4">📁 Boards</h2>

  {% for i in 1..4 %}
    <div class="card mb-3 shadow-sm">
      <div class="card-body">
        <h5 class="card-title">Board {{ i }}</h5>
        <p class="card-text">Ce board permet de discuter des sujets liés à {{ i }}.</p>
        <a href="" class="btn btn-outline-dark">Voir les sujets</a>
      </div>
    </div>
  {% endfor %}
{% endblock %}
