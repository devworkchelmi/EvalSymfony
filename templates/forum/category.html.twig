{% extends 'base.html.twig' %}

{% block title %}Boards - {{ category.name }}{% endblock %}
{% block body %}
  <h2 class="mb-4">📁 {{ category.name }}</h2>

{% for board in category %}
  <a href="{{ path('forum_category', { id: category.id }) }}" class="btn btn-outline-primary w-100">Voir les boards</a>
{% endfor %}
    <div class="alert alert-warning">Aucun board dans cette catégorie.</div>
{% endblock %}
