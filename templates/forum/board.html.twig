{% extends 'base.html.twig' %}

{% block title %}{{ board.name }} - Sujets{% endblock %}

{% block body %}
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="text-primary">
      {{ board.name }}</h1>
      <a href="{{ path('category_show', { id: board.category.id }) }}" class="btn btn-outline-secondary">
        ← Retour à la catégorie
      </a>
    </div>

    <p class="text-muted">{{ board.description }}</p>

    <hr>

    {% if topics is not empty %}
      <h4 class="mb-3">Sujets disponibles :</h4>

      {% for topic in topics %}
        <div class="card mb-3 shadow-sm">
          <div class="card-body">
            <h5 class="card-title">{{ topic.title }}</h5>
            <p class="card-text text-muted">Créé le {{ topic.createdAt|date('d/m/Y H:i') }}</p>
            <a href="{{ path('topic_show', { id: topic.id }) }}" class="btn btn-outline-primary">
              Voir les messages
            </a>
          </div>
        </div>
      {% endfor %}
    {% else %}
      <div class="alert alert-info">Aucun sujet dans ce board pour l’instant.</div>
    {% endif %}
  </div>
{% endblock %}
