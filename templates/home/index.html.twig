{% extends 'base.html.twig' %}

{% block title %}Accueil - ResauxSociaux{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }
    .password-change {
        margin-top: 2em;
        padding: 1em;
        border: 1px solid #ccc;
        max-width: 400px;
    }
    .alert-success {
        margin-top: 1em;
        padding: 10px;
        background-color: #d4edda;
        border-color: #c3e6cb;
        color: #155724;
        border-radius: 5px;
    }
</style>

<div class="example-wrapper text-light">
    <h1>Bienvenue {{ app.user ? app.user.email : 'Invit√©' }}! ‚úÖ</h1>

    <div class="my-4">
        <a href="{{ path('app_category') }}" class="btn btn-outline-light btn-lg">
            üìÇ Acc√©der aux cat√©gories du forum
        </a>
    </div>

    {% if app.user %}
    <div class="password-change">
        <h2>Changer votre mot de passe</h2>
        {{ form_start(changePasswordForm) }}
            {{ form_row(changePasswordForm.plainPassword.first) }}
            {{ form_row(changePasswordForm.plainPassword.second) }}
            <button type="submit" class="btn btn-primary">Changer le mot de passe</button>
        {{ form_end(changePasswordForm, {'render_rest': false}) }}
        {# le bouton ne sera g√©n√©r√© qu'une seule fois, plus de doublon ! #}
    </div>
    {% endif %}

    {% for message in app.flashes('success') %}
        <div class="alert-success">{{ message }}</div>
    {% endfor %}
</div>
{% endblock %}
